<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFragment">

    <LinearLayout
        android:id="@+id/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_extra_space"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="@dimen/small_extra_space"
        android:paddingStart="@dimen/small_extra_space"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.DisplaySmall"
            tools:text="Апрель" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/small_extra_space"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.DisplaySmall"
            tools:text="2025" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_drop_down_24"
            app:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/go_to_current_day"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="@dimen/match_constraints"
        android:layout_marginStart="@dimen/small_extra_space"
        android:backgroundTint="?attr/colorSurface"
        android:padding="@dimen/extra_small_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/calendar_icon"
        app:layout_constraintBottom_toBottomOf="@+id/current_date"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/current_date"
        app:layout_constraintTop_toTopOf="@id/current_date"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/current_day_badge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:elevation="@dimen/extra_small_padding"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.LabelSmall"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/go_to_current_day"
        app:layout_constraintTop_toTopOf="@id/go_to_current_day"
        tools:text="21" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/extra_small_padding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_date"
        tools:listitem="@layout/recycler_view_calendar_item" />

    <ScrollView
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view">

        <com.nc.calendar.DayTimelineView
            android:id="@+id/dayTimelineView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium_extra_space" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>